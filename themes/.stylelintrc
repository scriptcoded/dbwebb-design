{
  "extends": [
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "indentation": [
      4,
      {
        "except": [
          "value"
        ]
      }
    ],
    "at-rule-no-unknown": null,
    "order/properties-alphabetical-order": null,
    "selector-max-compound-selectors": 5,
    "selector-class-pattern": null
  },
  "ignoreFiles": [
    "**/node_modules/",
    "shared/fontawesome/**/*.scss",
    "**/*.css",
    "**/*.min.css"
  ]
}
